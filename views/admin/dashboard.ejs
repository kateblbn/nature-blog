<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn btn-g btn-position">+ Add New</a>
</div>

<ul class="admin-post">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                 <%= post.title %> &nearr;   
            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn btn-g btn-fs">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="post" >
                    <input type="submit" value="Delete" class="btn btn-g  btn-fs">
                </form>

            </div>


        </li>
    <% }) %>
        
    
</ul>